<Page xmlns="http://schemas.nativescript.org/tns.xsd" class="page"
    shownModally="onShownModally" loaded="onLoaded" unloaded="onUnloaded" backgroundSpanUnderStatusBar="true">
    <Page.actionBar>
        <ActionBar title="Title" visibility="collapsed">
        </ActionBar>
    </Page.actionBar>
    <StackLayout orientation="vertical" class="container">
        <GridLayout class="grid-class-modal">
            <StackLayout orientation="vertical">
                <StackLayout orientation="vertical">
                    <Label horizontalAlignment="right" id="class-title" class="title" text="{{ className }}"/>
                    <TextView class="details" text="{{ classDetails }}" editable="false" />
                </StackLayout>
                <Button horizontalAlignment="center" class="closeButton" text="Close" tap="closeModal"/>
            </StackLayout>
        </GridLayout>
    </StackLayout>
</Page>