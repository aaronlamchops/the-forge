<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="main-page" backgroundSpanUnderStatusBar="true">
    <Page.actionBar>
        <ActionBar title="Title" visibility="collapsed">
        </ActionBar>
    </Page.actionBar>
    <StackLayout orientation="vertical" class="container">
        <Label text="About" class="main-title" horizontalAlignment="center"/>
        <StackLayout orientation="vertical" class="btn-container">
            <Button horizontalAlignment="right" class="home-btn" text="Back" tap="{{ nav_back }}"/>
        </StackLayout>
    </StackLayout>
</Page>